<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hijau2"
    tools:context=".MainActivity">

   <EditText
       android:id="@+id/calculation"
       android:layout_width="match_parent"
       android:layout_height="95dp"
       android:layout_marginTop="68dp"
       android:textAlignment="textEnd"
       android:textSize="56dp"
       android:textStyle="bold"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <EditText
       android:id="@+id/result"
       android:layout_width="match_parent"
       android:layout_height="95dp"
       android:layout_marginTop="5dp"
       android:textAlignment="textEnd"
       android:textSize="20dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/calculation" />

   <Button
       android:id="@+id/btnac"
       android:layout_width="200dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="CLEAR"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toBottomOf="@id/result"
      app:layout_goneMarginLeft="5dp"/>

   <Button
       android:id="@+id/btndel"
       android:layout_width="200dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="DELETE"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/result"
       app:layout_goneMarginRight="5dp"/>

   <Button
       android:id="@+id/btn7"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="7"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btnac"
       app:layout_goneMarginLeft="5dp"
       />

   <Button
       android:id="@+id/btn8"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="8"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btn7"
       app:layout_constraintTop_toTopOf="@id/btn7"
       />
   <Button
       android:id="@+id/btn9"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="9"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btn8"
       app:layout_constraintTop_toTopOf="@id/btn8"
       />

   <Button
       android:id="@+id/btnk"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="X"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btn9"
       app:layout_constraintTop_toTopOf="@id/btn9"
       />
   <Button
       android:id="@+id/btn4"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="4"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btn7"
       app:layout_goneMarginLeft="5dp"
       />
   <Button
       android:id="@+id/btn5"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="5"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btn4"
       app:layout_constraintTop_toTopOf="@id/btn4"
       />
   <Button
       android:id="@+id/btn6"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="6"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btn5"
       app:layout_constraintTop_toTopOf="@id/btn5"
       />
   <Button
       android:id="@+id/btnb"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="/"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btn6"
       app:layout_constraintTop_toTopOf="@id/btn6"
       />
   <Button
       android:id="@+id/btn1"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="1"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btn4"
       app:layout_goneMarginLeft="5dp"
       />
   <Button
       android:id="@+id/btn2"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="2"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btn1"
       app:layout_constraintTop_toTopOf="@id/btn1"
       />
   <Button
       android:id="@+id/btn3"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="3"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btn2"
       app:layout_constraintTop_toTopOf="@id/btn2"
       />
   <Button
       android:id="@+id/btnt"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="+"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btn3"
       app:layout_constraintTop_toTopOf="@id/btn3"
       />
   <Button
       android:id="@+id/btn0"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="0"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toBottomOf="@id/btn1"
       app:layout_goneMarginLeft="5dp"
       />
   <Button
       android:id="@+id/btnkm"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text=","
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btn0"
       app:layout_constraintTop_toTopOf="@id/btn0"
       />
   <Button
       android:id="@+id/btnkr"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="-"
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btnkm"
       app:layout_constraintTop_toTopOf="@id/btnkm"
       />
   <Button
       android:id="@+id/btnsm"
       android:layout_width="100dp"
       android:layout_height="80dp"
       android:layout_marginLeft="4dp"
       android:backgroundTint="@color/hijau"
       android:text="="
       android:textColor="@color/hijau3"
       android:textSize="26dp"
       android:textStyle="bold"
       app:layout_constraintStart_toEndOf="@id/btnkr"
       app:layout_constraintTop_toTopOf="@id/btnkr"
       />





</androidx.constraintlayout.widget.ConstraintLayout>